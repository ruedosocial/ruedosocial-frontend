button,
.rs-btn,
.mt-cta {
  display: inline-flex;
  align-items: center;
  justify-content: center;

  width: 160px;
  height: 36px;
  margin: 16px auto 0 auto;

  border-radius: 8px;
  border: 1px solid #c49b3b;
  background-color: #c49b3b;

  color: #000;
  font-size: 1.15rem;
  font-weight: 800;
  line-height: 1;

  cursor: pointer;
  text-align: center;
  white-space: nowrap;

  transition: transform 0.18s ease, box-shadow 0.18s ease;
}

button:hover,
.rs-btn:hover,
.mt-cta:hover {
  transform: scale(1.04);
  box-shadow: 0 0 10px rgba(196,155,59,0.55);
}

button:active,
.rs-btn:active,
.mt-cta:active {
  transform: scale(0.96);
}

button *,
.rs-btn *,
.mt-cta * {
  font-size: inherit;
  font-weight: inherit;
  line-height: inherit;
  pointer-events: none;
}
