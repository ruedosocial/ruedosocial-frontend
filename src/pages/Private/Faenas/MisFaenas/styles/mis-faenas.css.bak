.mis-faenas {
  padding: 40px;
  color: #fff;
}

.mf-header h1 {
  font-size: 2.4rem;
  color: #f7d376;
  margin-bottom: 6px;
}

.mf-header p {
  color: #e38b2d;
  margin-bottom: 30px;
}

/* RESUMEN */
.mf-summary {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
  gap: 20px;
  margin-bottom: 36px;
}

.mf-summary-card {
  background: rgba(0,0,0,0.55);
  border: 1px solid rgba(196,155,59,0.35);
  border-radius: 16px;
  padding: 18px;
  text-align: center;
}

.mf-summary-card span {
  display: block;
  color: #e38b2d;
  margin-bottom: 6px;
}

.mf-summary-card strong {
  font-size: 1.6rem;
  font-family: "IBM Plex Mono", monospace;
  color: #f7d376;
}

/* TARJETAS */
.mf-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 24px;
}

.mf-card {
  background: rgba(0,0,0,0.55);
  border: 1px solid rgba(196,155,59,0.4);
  border-radius: 18px;
  padding: 22px;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.mf-card:hover {
  transform: scale(1.03);
  box-shadow: 0 0 20px rgba(196,155,59,0.35);
}

.mf-card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 14px;
}

.mf-card h3 {
  font-size: 1.25rem;
  color: #ffb55a;
}

/* TAGS */
.mf-tag {
  padding: 4px 12px;
  border-radius: 14px;
  font-size: 0.8rem;
  font-weight: 800;
}

.mf-tag.activa {
  background: rgba(255,181,90,0.15);
  color: #ffb55a;
}

.mf-tag.ganada {
  background: rgba(90,200,120,0.15);
  color: #5ac878;
}

/* FILAS */
.mf-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 6px;
  font-family: "IBM Plex Mono", monospace;
}

/* ACCIONES */
.mf-action {
  margin-top: 14px;
  width: 100%;
  padding: 10px;
  border-radius: 18px;
  border: none;
  cursor: pointer;
  font-weight: 700;
  background: rgba(196,155,59,0.25);
  color: #f7d376;
  transition: transform 0.2s ease, background 0.2s ease;
}

.mf-action:hover {
  transform: scale(1.04);
  background: rgba(196,155,59,0.4);
}

.mf-action.disabled {
  cursor: default;
  opacity: 0.6;
}
